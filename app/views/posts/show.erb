<p>
<strong>Title</strong>
<%= @post.title %>
</p>
<p>
  <strong>Text</strong>
  <%= @post.text %>
</p>
<h2>Comments:</h2>
<% @post.comments.each do |a| %>
<p>
    <strong>Commenter:</strong>
    <%= a.commenter %>
</p>
<p>
    <strong>Body:</strong>
    <%= a.body %>
</p>
    <p>
      <%= link_to 'Destroy Comment', [a.post, a],
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </p>
    <% end %>
<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back", posts_path %>
<%= link_to "Edit", edit_post_path %>
